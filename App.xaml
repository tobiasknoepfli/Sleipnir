<Application x:Class="Sleipnir.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sleipnir.App.Views"
             xmlns:utils="clr-namespace:Sleipnir.App.Utils">
    <Application.Resources>
        <ResourceDictionary>
            <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <utils:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" />
            <utils:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <utils:BooleanToDoubleConverter x:Key="BooleanToDoubleConverter" />
            <utils:ProjectLogoConverter x:Key="ProjectLogoConverter" />
            <utils:ProjectLogoVisibilityConverter x:Key="ProjectLogoVisibilityConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
