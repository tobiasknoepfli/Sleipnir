<Window x:Class="Sleipnir.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sleipnir.App.Views"
        xmlns:vm="clr-namespace:Sleipnir.App.ViewModels"
        mc:Ignorable="d"
        Title="Sleipnir" Height="900" Width="1400"
        Icon="/Resources/sleipnir.ico"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:StringToVisibilityInverseConverter x:Key="StringToVisibilityInverseConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        <local:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
        <local:MultiplierConverter x:Key="MultiplierConverter"/>

        <DataTemplate x:Key="IssueCardTemplate">
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12" Background="#1C1F30">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding DataContext.OpenIssueDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <Grid>
                    <!-- Standard View -->
                    <StackPanel Visibility="{Binding DataContext.IsCompactView, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                        <Grid Margin="0,0,0,8">
                            <Border Background="#2A2F45" Padding="8,3" CornerRadius="4" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center" ToolTip="{Binding Type}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Setter Property="Text" Value="ðŸ“‹"/>
                                                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="Bug">
                                                        <Setter Property="Text" Value="ðŸž"/>
                                                        <Setter Property="Foreground" Value="#FF5252"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Story">
                                                        <Setter Property="Text" Value="ðŸ“˜"/>
                                                        <Setter Property="Foreground" Value="#4D7CFF"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Feature">
                                                        <Setter Property="Text" Value="âœ¨"/>
                                                        <Setter Property="Foreground" Value="#FFD740"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="Idea">
                                                        <Setter Property="Text" Value="ðŸ’¡"/>
                                                        <Setter Property="Foreground" Value="#B388FF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Type}" FontSize="10" Foreground="{StaticResource TextMutedBrush}" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                 <Grid Margin="0,0,5,0">
                                     <ToggleButton x:Name="PlanToggle" 
                                                   Command="{Binding DataContext.SetPlannedIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding}">
                                         <ToggleButton.Style>
                                             <Style TargetType="ToggleButton" BasedOn="{StaticResource SidebarToggleButton}">
                                                 <Setter Property="Padding" Value="0"/>
                                                 <Setter Property="Height" Value="Auto"/>
                                                 <Setter Property="Visibility" Value="Collapsed"/>
                                                 <Style.Triggers>
                                                      <MultiDataTrigger>
                                                          <MultiDataTrigger.Conditions>
                                                              <Condition Binding="{Binding SprintId, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}" Value="Visible"/>
                                                              <Condition Binding="{Binding Type}" Value="Bug"/>
                                                          </MultiDataTrigger.Conditions>
                                                          <Setter Property="Visibility" Value="Visible"/>
                                                      </MultiDataTrigger>
                                                      <MultiDataTrigger>
                                                          <MultiDataTrigger.Conditions>
                                                              <Condition Binding="{Binding SprintId, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}" Value="Visible"/>
                                                              <Condition Binding="{Binding Type}" Value="Feature"/>
                                                          </MultiDataTrigger.Conditions>
                                                          <Setter Property="Visibility" Value="Visible"/>
                                                      </MultiDataTrigger>
                                                 </Style.Triggers>
                                             </Style>
                                         </ToggleButton.Style>
                                         <Border Background="#3D7C4DFF" Padding="4,2" CornerRadius="4">
                                             <TextBlock Text="PLAN" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                         </Border>
                                     </ToggleButton>

                                     <Popup IsOpen="{Binding IsChecked, ElementName=PlanToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=PlanToggle}" AllowsTransparency="True">
                                         <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="250" MaxHeight="300" Margin="0,5,0,0">
                                             <Grid>
                                                  <Grid.RowDefinitions>
                                                      <RowDefinition Height="Auto"/>
                                                      <RowDefinition Height="*"/>
                                                  </Grid.RowDefinitions>
                                                  <TextBlock Text="Select Target Sprint" FontSize="10" Foreground="#8B949E" Margin="12,12,12,8" FontWeight="Bold"/>
                                                  <ScrollViewer Grid.Row="1" Margin="5">
                                                      <ItemsControl ItemsSource="{Binding DataContext.Sprints, RelativeSource={RelativeSource AncestorType=Window}}">
                                                          <ItemsControl.ItemTemplate>
                                                              <DataTemplate>
                                                                  <Button Command="{Binding DataContext.AssignToSprintCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                          CommandParameter="{Binding}"
                                                                          Click="SprintSelected_Click"
                                                                          Style="{StaticResource SidebarButton}" HorizontalContentAlignment="Left" Padding="10,8" Margin="0,0,0,2">
                                                                       <StackPanel>
                                                                           <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                                                           <StackPanel Orientation="Horizontal" Opacity="0.6">
                                                                               <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="10"/>
                                                                               <TextBlock Text=" - " FontSize="10"/>
                                                                               <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="10"/>
                                                                           </StackPanel>
                                                                       </StackPanel>
                                                                  </Button>
                                                              </DataTemplate>
                                                          </ItemsControl.ItemTemplate>
                                                      </ItemsControl>
                                                  </ScrollViewer>
                                             </Grid>
                                         </Border>
                                     </Popup>
                                 </Grid>

                                <Button Command="{Binding DataContext.ArchiveIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}"
                                        Margin="5,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="Opacity" Value="0.5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Idea">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Story">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CanBeArchived}" Value="True">
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Border Background="#2A2F45" Padding="4,2" CornerRadius="4">
                                        <TextBlock Text="ðŸ“ ARCHIVE" FontSize="9" Foreground="#8B949E" FontWeight="Bold"/>
                                    </Border>
                                </Button>

                                <Button Command="{Binding DataContext.RestoreIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}"
                                        Margin="5,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Archived">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Border Background="#3D7C4DFF" Padding="4,2" CornerRadius="4">
                                        <TextBlock Text="â†º RESTORE" FontSize="9" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                    </Border>
                                </Button>
                            </StackPanel>
                            
                            <!-- Parent Idea Tag for Stories (Top Right) -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"
                                        Visibility="{Binding ParentTitle, Converter={StaticResource NullToVisibilityConverter}}">
                                <Border Background="#1A1D2E" BorderBrush="#3D7C4DFF" BorderThickness="1" CornerRadius="4" Padding="6,2">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ’¡ " FontSize="10" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding ParentTitle}" FontSize="10" Foreground="#E0E0E0" MaxWidth="100" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                        <Button Command="{Binding DataContext.UnlinkIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SidebarButton}" Padding="4,0" Margin="5,0,0,0">
                                            <TextBlock Text="âœ•" FontSize="8" Foreground="#FF5252" FontWeight="Bold"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{Binding Description}" FontWeight="SemiBold" Margin="0,0,0,8" 
                                   TextWrapping="Wrap" FontSize="13" LineHeight="17"/>
                        
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#1A1D2E" Padding="5,2" CornerRadius="4" Margin="0,0,5,0" ToolTip="{Binding Priority}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Idea">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Story">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="12" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="âº"/>
                                                <Setter Property="Foreground" Value="#FFD740"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Critical">
                                                        <Setter Property="Text" Value="âš¡"/>
                                                        <Setter Property="Foreground" Value="#FF1744"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Very High">
                                                        <Setter Property="Text" Value="â«"/>
                                                        <Setter Property="Foreground" Value="#FF5252"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="High">
                                                        <Setter Property="Text" Value="ðŸ”¼"/>
                                                        <Setter Property="Foreground" Value="#FFAB40"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                        <Setter Property="Text" Value="âº"/>
                                                        <Setter Property="Foreground" Value="#FFD740"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                        <Setter Property="Text" Value="ðŸ”½"/>
                                                        <Setter Property="Foreground" Value="#69F0AE"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Very Low">
                                                        <Setter Property="Text" Value="â¬"/>
                                                        <Setter Property="Foreground" Value="#40C4FF"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Nice to Have">
                                                        <Setter Property="Text" Value="ðŸ’¡"/>
                                                        <Setter Property="Foreground" Value="#7C4DFF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <Border Background="#1A1D2E" Padding="5,2" CornerRadius="4">
                                    <TextBlock Text="{Binding AgeString}" FontSize="11" Foreground="{StaticResource TextMutedBrush}"/>
                                </Border>
                            </StackPanel>
                             <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                 <TextBlock Text="{Binding ResponsibleUsers}" FontSize="10" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" Margin="0,0,10,0">
                                     <TextBlock.Style>
                                         <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                             <Style.Triggers>
                                                 <DataTrigger Binding="{Binding Type}" Value="Idea">
                                                     <Setter Property="Visibility" Value="Collapsed"/>
                                                 </DataTrigger>
                                                 <DataTrigger Binding="{Binding Type}" Value="Story">
                                                     <Setter Property="Visibility" Value="Collapsed"/>
                                                 </DataTrigger>
                                             </Style.Triggers>
                                         </Style>
                                     </TextBlock.Style>
                                 </TextBlock>
                                 <Border Background="#337C4DFF" Padding="5,2" CornerRadius="4" Visibility="{Binding SprintId, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="Sprint" FontSize="10" Foreground="{StaticResource AccentBrush}"/>
                                 </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Added for Hierarchy -->
                        <StackPanel Margin="0,15,0,0">
                            <!-- Show children for Ideas (Stories) -->
                            <StackPanel Visibility="{Binding Category, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Hub}">
                                <ItemsControl ItemsSource="{Binding Children}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#121420" Margin="0,0,0,4" Padding="10,6" CornerRadius="4">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftDoubleClick" 
                                                                  Command="{Binding DataContext.JumpToIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#E0E0E0" TextWrapping="Wrap"/>
                                                    <Border Grid.Column="1" Background="#2A2F45" CornerRadius="4" Padding="5,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding SprintTag}" FontSize="8" Foreground="#8B949E" FontWeight="Bold"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Command="{Binding DataContext.AddStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SidebarButton}" HorizontalAlignment="Left" Margin="0,5,0,0">
                                    <TextBlock Text="+ Add Story" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                </Button>
                            </StackPanel>

                            <!-- Show children for Stories (Issues) -->
                            <StackPanel Visibility="{Binding Category, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Pipeline}">
                                <!-- Strategic section removed (now in header) -->

                                <ItemsControl ItemsSource="{Binding Children}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#121420" Margin="0,0,0,4" Padding="10,6" CornerRadius="4">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftDoubleClick" 
                                                                  Command="{Binding DataContext.JumpToIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#E0E0E0" TextWrapping="Wrap"/>
                                                     <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                         <Grid Margin="0,0,5,0">
                                                             <ToggleButton x:Name="ChildPlanToggle" 
                                                                           Command="{Binding DataContext.SetPlannedIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                           CommandParameter="{Binding}"
                                                                           Style="{StaticResource SidebarToggleButton}" Padding="0" Height="Auto"
                                                                           Visibility="{Binding SprintId, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                                                                 <Border Background="#3D7C4DFF" Padding="4,2" CornerRadius="4">
                                                                     <TextBlock Text="PLAN" FontSize="8" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                                                 </Border>
                                                             </ToggleButton>

                                                             <Popup IsOpen="{Binding IsChecked, ElementName=ChildPlanToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=ChildPlanToggle}" AllowsTransparency="True">
                                                                 <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="220" MaxHeight="250" Margin="0,5,0,0">
                                                                     <Grid>
                                                                          <Grid.RowDefinitions>
                                                                              <RowDefinition Height="Auto"/>
                                                                              <RowDefinition Height="*"/>
                                                                          </Grid.RowDefinitions>
                                                                          <TextBlock Text="Select Target Sprint" FontSize="9" Foreground="#8B949E" Margin="10,10,10,5" FontWeight="Bold"/>
                                                                          <ScrollViewer Grid.Row="1" Margin="5">
                                                                              <ItemsControl ItemsSource="{Binding DataContext.Sprints, RelativeSource={RelativeSource AncestorType=Window}}">
                                                                                  <ItemsControl.ItemTemplate>
                                                                                      <DataTemplate>
                                                                                          <Button Command="{Binding DataContext.AssignToSprintCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                                                  CommandParameter="{Binding}"
                                                                                                  Click="SprintSelected_Click"
                                                                                                  Style="{StaticResource SidebarButton}" HorizontalContentAlignment="Left" Padding="8,6" Margin="0,0,0,2">
                                                                                               <StackPanel>
                                                                                                   <TextBlock Text="{Binding Name}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                                                                   <StackPanel Orientation="Horizontal" Opacity="0.6">
                                                                                                       <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="9"/>
                                                                                                       <TextBlock Text=" - " FontSize="9"/>
                                                                                                       <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="9"/>
                                                                                                   </StackPanel>
                                                                                               </StackPanel>
                                                                                          </Button>
                                                                                      </DataTemplate>
                                                                                  </ItemsControl.ItemTemplate>
                                                                              </ItemsControl>
                                                                          </ScrollViewer>
                                                                     </Grid>
                                                                 </Border>
                                                             </Popup>
                                                         </Grid>
                                                         <Border Background="#2A2F45" CornerRadius="4" Padding="5,2" VerticalAlignment="Center">
                                                             <TextBlock Text="{Binding Status}" FontSize="8" Foreground="#8B949E" FontWeight="Bold"/>
                                                         </Border>
                                                     </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Command="{Binding DataContext.AddChildIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SidebarButton}" HorizontalAlignment="Left" Margin="0,5,0,0">
                                    <TextBlock Text="+ Add Issue" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <!-- Timestamp -->
                        <TextBlock Text="{Binding CreatedAt, StringFormat='{}Idea from {0:dd.MM.yyyy HH:mm}'}" 
                                   FontSize="9" Foreground="{StaticResource TextMutedBrush}" Margin="0,10,0,0" Opacity="0.6"
                                   Visibility="{Binding Category, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Hub}"/>
                    </StackPanel>

                    <!-- Compact View (Two-Liner) -->
                    <StackPanel Visibility="{Binding DataContext.IsCompactView, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center" ToolTip="{Binding Type}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                            <Setter Property="Text" Value="ðŸ“‹"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Bug">
                                                    <Setter Property="Text" Value="ðŸž"/>
                                                    <Setter Property="Foreground" Value="#FF5252"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Story">
                                                    <Setter Property="Text" Value="ðŸ“˜"/>
                                                    <Setter Property="Foreground" Value="#4D7CFF"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Feature">
                                                    <Setter Property="Text" Value="âœ¨"/>
                                                    <Setter Property="Foreground" Value="#FFD740"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Idea">
                                                    <Setter Property="Text" Value="ðŸ’¡"/>
                                                    <Setter Property="Foreground" Value="#B388FF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding FormattedTitle}" FontWeight="Medium" FontSize="13" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Orientation="Horizontal" Margin="18,4,0,0">
                             <TextBlock FontSize="12" Margin="0,0,15,0" VerticalAlignment="Center" ToolTip="{Binding Priority}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="âº"/>
                                        <Setter Property="Foreground" Value="#FFD740"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Priority}" Value="Critical">
                                                <Setter Property="Text" Value="âš¡"/>
                                                <Setter Property="Foreground" Value="#FF1744"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Priority}" Value="Very High">
                                                <Setter Property="Text" Value="â«"/>
                                                <Setter Property="Foreground" Value="#FF5252"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Priority}" Value="High">
                                                <Setter Property="Text" Value="ðŸ”¼"/>
                                                <Setter Property="Foreground" Value="#FFAB40"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Priority}" Value="Medium">
                                                <Setter Property="Text" Value="âº"/>
                                                <Setter Property="Foreground" Value="#FFD740"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Priority}" Value="Low">
                                                <Setter Property="Text" Value="ðŸ”½"/>
                                                <Setter Property="Foreground" Value="#69F0AE"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Priority}" Value="Very Low">
                                                <Setter Property="Text" Value="â¬"/>
                                                <Setter Property="Foreground" Value="#40C4FF"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Priority}" Value="Nice to Have">
                                                <Setter Property="Text" Value="ðŸ’¡"/>
                                                <Setter Property="Foreground" Value="#7C4DFF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                             </TextBlock>
                             <TextBlock Text="{Binding AgeString}" FontSize="10" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,15,0"/>
                             <TextBlock Text="{Binding ResponsibleUsers}" FontSize="10" Foreground="{StaticResource TextMutedBrush}" Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="InnerContentGrid" Grid.RowSpan="2">
            <Grid.Effect>
                <BlurEffect Radius="{Binding IsProjectSelectorVisible, Converter={StaticResource BooleanToDoubleConverter}, ConverterParameter=15}"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#141724" Height="32" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Image Source="/Resources/sleipnir_logo.png" Height="20" Width="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Sleipnir | Advanced Issue Tracking" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
