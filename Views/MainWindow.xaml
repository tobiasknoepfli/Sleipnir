<Window x:Class="Sleipnir.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sleipnir.App.Views"
        xmlns:vm="clr-namespace:Sleipnir.App.ViewModels"
        xmlns:utils="clr-namespace:Sleipnir.App.Utils"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Sleipnir" Height="900" Width="1400"
        Icon="/Resources/sleipnir.ico"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <utils:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <utils:StringToVisibilityInverseConverter x:Key="StringToVisibilityInverseConverter"/>
        <utils:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utils:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        <utils:BooleanInverseConverter x:Key="BooleanInverseConverter" />
        <utils:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
        <utils:MultiplierConverter x:Key="MultiplierConverter"/>
        <utils:PasswordMaskConverter x:Key="PasswordMaskConverter"/>
        <utils:StringContainsMultiConverter x:Key="StringContainsMultiConverter"/>
        <utils:MultiSelectionConverter x:Key="MultiSelectionConverter"/>
        <utils:AssigneeToIconConverter x:Key="AssigneeToIconConverter"/>
        <utils:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
        
        <DataTemplate x:Key="IssueCardTemplate">
            <Border Margin="0,0,0,12" Background="#1C1F30" Padding="15">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding DataContext.OpenIssueDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource ModernCard}">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="IssueCard_PreviewMouseLeftButtonDown"/>
                        <EventSetter Event="MouseMove" Handler="IssueCard_MouseMove"/>
                        <Style.Triggers>
                            <!-- When collapsed, show priority-colored border -->
                            <DataTrigger Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="BorderThickness" Value="2,0,0,0"/>
                            </DataTrigger>
                            
                            <!-- Priority colors for collapsed state -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="Critical"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#FF4444"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="Very High"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#FF8800"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="High"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#FFEE00"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="Neutral"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#FFFFFF"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="Low"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#88CCFF"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="Very Low"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#4488FF"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True"/>
                                    <Condition Binding="{Binding Priority}" Value="Nice to Have"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="BorderBrush" Value="#00CED1"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <!-- Standard Issue Layout -->
                    <StackPanel x:Name="StandardLayout">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Peek Button (only visible when collapsed) -->
                            <Button x:Name="PeekButton" Grid.Column="0" Width="20" Height="20" Margin="0,0,5,0" 
                                    Style="{StaticResource WindowControlButton}" Padding="0" VerticalAlignment="Top"
                                    PreviewMouseDown="PeekButton_MouseDown" PreviewMouseUp="PeekButton_MouseUp"
                                    ToolTip="Hold to peek">
                                <Button.Visibility>
                                    <Binding Path="DataContext.AreCardsCollapsed" RelativeSource="{RelativeSource AncestorType=Window}" 
                                             Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                </Button.Visibility>
                                <iconPacks:PackIconMaterial Kind="Eye" Width="12" Height="12" Foreground="#7C4DFF"/>
                            </Button>
                            
                            <StackPanel Grid.Column="1">
                                <!-- Type badge (hidden when collapsed) -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text="ðŸ“‹" Foreground="#4D7CFF" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <Border BorderBrush="#4D7CFF" BorderThickness="1" CornerRadius="2" Padding="4,1">
                                        <TextBlock Text="ISSUE" Foreground="#4D7CFF" FontSize="10" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Title (smaller and not bold when collapsed) -->
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                         LostFocus="IssueTitle_LostFocus"
                                         KeyDown="IssueTitle_KeyDown"
                                         Background="Transparent" BorderThickness="0" Foreground="White" 
                                         Margin="0,0,0,10" Padding="0"
                                         TextWrapping="Wrap" AcceptsReturn="False">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="ToolTip" Value="{x:Null}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="FontSize" Value="11"/>
                                                    <Setter Property="FontWeight" Value="Normal"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="ToolTip" Value="{Binding Description}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                    <TextBox.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick" 
                                                      Command="{Binding DataContext.OpenIssueDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                      CommandParameter="{Binding}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                
                                <!-- Collapsible Details -->
                                <StackPanel x:Name="CollapsibleDetails">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.AreCardsCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    
                                    <TextBlock Text="{Binding TypeTag}" FontSize="11" Foreground="#FFD740" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding PriorityTag}" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,15">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#8B949E"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Critical"><Setter Property="Foreground" Value="#FF4444"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Very High"><Setter Property="Foreground" Value="#FF8800"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="High"><Setter Property="Foreground" Value="#FFEE00"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Neutral"><Setter Property="Foreground" Value="#FFFFFF"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Low"><Setter Property="Foreground" Value="#88CCFF"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Very Low"><Setter Property="Foreground" Value="#4488FF"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Nice to Have"><Setter Property="Foreground" Value="#00CED1"/></DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <ContentControl Margin="0,0,0,10">
                                        <ContentControl.Content>
                                            <MultiBinding Converter="{StaticResource AssigneeToIconConverter}">
                                                <Binding Path="ResponsibleUsers"/>
                                                <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                            </MultiBinding>
                                        </ContentControl.Content>
                                    </ContentControl>
                                    
                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}created {0:dd.MM.yyyy}'}" 
                                               FontSize="9" Foreground="#8B949E" Opacity="0.6"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <ToggleButton x:Name="PlanToggle" Style="{StaticResource SidebarToggleButton}" Padding="0" Height="Auto" 
                                              HorizontalAlignment="Right"
                                              Command="{Binding DataContext.SetPlannedIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding}">
                                    <Border Background="#3D7C4DFF" Padding="6,3" CornerRadius="4">
                                        <TextBlock Text="PLAN" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                    </Border>
                                </ToggleButton>

                                <!-- Action Buttons -->
                                <StackPanel Margin="0,8,0,0">
                                    <Button Style="{StaticResource SidebarButton}" 
                                            Padding="6,3" Height="Auto" HorizontalAlignment="Right"
                                            Command="{Binding DataContext.CopyIssueToClipboardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Copy Title // Description">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="ContentCopy" Width="10" Height="10" Margin="0,0,4,0" Foreground="#88CCFF"/>
                                            <TextBlock Text="COPY" FontSize="10" FontWeight="Bold" Foreground="#88CCFF"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource SidebarButton}" 
                                            Margin="0,5,0,0" Padding="6,3" Height="Auto" HorizontalAlignment="Right"
                                            Command="{Binding DataContext.ShowHierarchyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="Show Graphic Hierarchy">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="Sitemap" Width="10" Height="10" Margin="0,0,4,0" Foreground="#7C4DFF"/>
                                            <TextBlock Text="GRAPH" FontSize="10" FontWeight="Bold" Foreground="#7C4DFF"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>

                                <Popup IsOpen="{Binding IsChecked, ElementName=PlanToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=PlanToggle}" AllowsTransparency="True">
                                    <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="250" MaxHeight="300" Margin="0,5,0,0">
                                              <ScrollViewer Margin="5">
                                                  <ItemsControl ItemsSource="{Binding DataContext.Sprints, RelativeSource={RelativeSource AncestorType=Window}}">
                                                      <ItemsControl.ItemTemplate>
                                                          <DataTemplate>
                                                              <Button Command="{Binding DataContext.AssignToSprintCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                      CommandParameter="{Binding}" Click="SprintSelected_Click"
                                                                      Style="{StaticResource SidebarButton}" HorizontalContentAlignment="Left" Padding="10,8" Margin="0,0,0,2">
                                                                   <StackPanel>
                                                                       <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                                                       <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="10" Opacity="0.6"/>
                                                                   </StackPanel>
                                                              </Button>
                                                          </DataTemplate>
                                                      </ItemsControl.ItemTemplate>
                                                  </ItemsControl>
                                              </ScrollViewer>
                                          </Border>
                                      </Popup>
                                </StackPanel>
                            </Grid>
                            
                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock Text="{Binding IssueNumber}" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="0,0,0,2"/>
                                <StackPanel Visibility="{Binding ParentStoryNumber, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="{Binding ParentStoryNumber}" Foreground="#FF5252" FontSize="10" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding ParentTitle}" Foreground="#FF5252" FontSize="9" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <StackPanel Visibility="{Binding ParentEpicNumber, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="{Binding ParentEpicNumber}" Foreground="#FFD740" FontSize="10" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding ParentTitle}" Foreground="#FFD740" FontSize="9" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Pipeline Story Layout -->
                    <StackPanel x:Name="PipelineStoryLayout" Visibility="Collapsed">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ“˜" Foreground="#FF5252" FontSize="14" Margin="0,0,5,0"/>
                                <Border BorderBrush="#FF5252" BorderThickness="1" CornerRadius="2" Padding="4,1">
                                    <TextBlock Text="STORY" Foreground="#FF5252" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock Text="{Binding StoryNumber}" Foreground="#8B949E" FontSize="10" HorizontalAlignment="Right" Opacity="0.8"/>
                                <Button Command="{Binding DataContext.JumpToIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding ParentIssueId}"
                                        Style="{StaticResource SidebarButton}" Padding="0" Margin="0,2,0,0"
                                        Visibility="{Binding ParentFriendlyId, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding ParentEpicNumber}" Foreground="#FFD740" FontSize="9" FontWeight="Bold" HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding ParentTitle}" Foreground="#FFD740" FontSize="8" HorizontalAlignment="Right" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                 LostFocus="IssueTitle_LostFocus" KeyDown="IssueTitle_KeyDown"
                                 Background="Transparent" BorderThickness="0" Foreground="White" 
                                 FontSize="16" FontWeight="Bold" Margin="0,15,0,10" Padding="0" TextWrapping="Wrap" AcceptsReturn="False"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Command="{Binding DataContext.AddChildIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Style="{StaticResource SidebarButton}" Padding="0" Margin="0,5,15,10">
                                <TextBlock Text="+ Issue" FontSize="11" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                            </Button>
                            
                            <Button Command="{Binding DataContext.ShowHierarchyCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Style="{StaticResource SidebarButton}" Padding="0" Margin="0,5,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Sitemap" Width="11" Height="11" Margin="0,0,4,0" Foreground="#7C4DFF"/>
                                    <TextBlock Text="GRAPH" FontSize="11" Foreground="#7C4DFF" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}created {0:dd.MM.yyyy}'}" FontSize="9" Foreground="#8B949E" VerticalAlignment="Bottom" Opacity="0.6"/>
                            <TextBlock Text="{Binding AgeString}" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.6"/>
                        </Grid>
                    </StackPanel>

                    <!-- Epic Hub Layout -->
                    <StackPanel x:Name="EpicHubLayout" Visibility="Collapsed">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ’¡" Foreground="#FFD740" FontSize="14" Margin="0,0,5,0"/>
                                <Border BorderBrush="#FFD740" BorderThickness="1" CornerRadius="2" Padding="4,1">
                                    <TextBlock Text="EPIC" Foreground="#FFD740" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding EpicNumber}" Foreground="#8B949E" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0.8"/>
                        </Grid>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                 LostFocus="IssueTitle_LostFocus" KeyDown="IssueTitle_KeyDown"
                                 Background="Transparent" BorderThickness="0" Foreground="White" 
                                 FontSize="16" FontWeight="Bold" Margin="0,15,0,10" Padding="0" TextWrapping="Wrap" AcceptsReturn="False"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Command="{Binding DataContext.AddStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Style="{StaticResource SidebarButton}" Padding="0" Margin="0,5,15,10">
                                <TextBlock Text="+ Story" FontSize="11" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                            </Button>

                            <Button Command="{Binding DataContext.ShowHierarchyCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Style="{StaticResource SidebarButton}" Padding="0" Margin="0,5,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Sitemap" Width="11" Height="11" Margin="0,0,4,0" Foreground="#7C4DFF"/>
                                    <TextBlock Text="GRAPH" FontSize="11" Foreground="#7C4DFF" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}created {0:dd.MM.yyyy}'}" FontSize="9" Foreground="#8B949E" VerticalAlignment="Bottom" Opacity="0.6"/>
                            <TextBlock Text="{Binding AgeString}" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.6"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Type}" Value="Epic"/>
                        <Condition Binding="{Binding Category}" Value="Hub"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="StandardLayout" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="EpicHubLayout" Property="Visibility" Value="Visible"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Type}" Value="Story"/>
                        <Condition Binding="{Binding Category}" Value="Pipeline"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="StandardLayout" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="PipelineStoryLayout" Property="Visibility" Value="Visible"/>
                </MultiDataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="InnerContentGrid" Grid.RowSpan="2">
            <Grid.Effect>
                <BlurEffect Radius="{Binding IsProjectSelectorVisible, Converter={StaticResource BooleanToDoubleConverter}, ConverterParameter=15}"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#141724" Height="32" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Image Source="/Resources/sleipnir_logo.png" Height="20" Width="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Sleipnir | Advanced Issue Tracking" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="â€”" Style="{StaticResource WindowControlButton}" Click="Minimize_Click"/>
                    <Button Content="â–¢" Style="{StaticResource WindowControlButton}" Click="Maximize_Click"/>
                    <Button Content="âœ•" Style="{StaticResource WindowCloseButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#141724" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/> <!-- Added for Admin Actions and User Profile -->
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <Image Source="/Resources/sleipnir_logo.png" Height="40" Width="40" Margin="0,0,10,0"/>
                        <TextBlock Text="Sleipnir" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Project Switcher Card -->
                    <Border Grid.Row="1" Background="#1C1F30" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,25" Padding="5">
                        <Button Command="{Binding ToggleProjectSelectorCommand}" Style="{StaticResource SidebarButton}" Height="64" Padding="12,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0" ClipToBounds="True">
                                    <Grid>
                                        <!-- Placeholder Background -->
                                        <Border Background="{StaticResource AccentBrush}">
                                            <Border.Visibility>
                                                <MultiBinding Converter="{StaticResource ProjectLogoVisibilityConverter}" ConverterParameter="Inverse">
                                                    <Binding Path="SelectedProject.LogoUrl"/>
                                                    <Binding Path="SelectedProject.LogoData"/>
                                                </MultiBinding>
                                            </Border.Visibility>
                                            <TextBlock Text="P" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                        
                                        <Image Stretch="UniformToFill">
                                            <Image.Visibility>
                                                <MultiBinding Converter="{StaticResource ProjectLogoVisibilityConverter}">
                                                    <Binding Path="SelectedProject.LogoUrl"/>
                                                    <Binding Path="SelectedProject.LogoData"/>
                                                </MultiBinding>
                                            </Image.Visibility>
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource ProjectLogoConverter}">
                                                    <Binding Path="SelectedProject.LogoUrl"/>
                                                    <Binding Path="SelectedProject.LogoData"/>
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                    </Grid>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
