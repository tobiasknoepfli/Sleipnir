                                            <Grid>
                                                <Image Source="/Resources/sleipnir_logo.png" Height="80" Width="80" Margin="0,0,0,5"/>
                                                <TextBlock Text="+" FontSize="30" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" 
                                                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-10,-10,0"/>
                                            </Grid>
                                            <TextBlock Text="ADD NEW" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                                            <TextBlock Text="PROJECT" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Projects Wheel (ItemsControl) -->
                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" Rows="2" Width="600" Height="600"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SidebarButton}" Height="160" Width="160">
                                    <Border Background="#2A2F45" CornerRadius="20" Padding="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <Border Width="50" Height="50" CornerRadius="12" Margin="0,0,0,12" HorizontalAlignment="Center" ClipToBounds="True">
                                                <Grid>
                                                    <Border Background="{StaticResource AccentBrush}" 
                                                            Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                    
                                                    <TextBlock Text="P" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="center" VerticalAlignment="Center"
                                                               Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                    
                                                    <Image Source="{Binding LogoUrl}" Stretch="UniformToFill"
                                                           Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}}">
                                                    </Image>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="15" 
                                                       TextAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" 
                                                       MaxHeight="45"/>
                                        </StackPanel>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
