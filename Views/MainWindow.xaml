<Window x:Class="Sleipnir.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sleipnir.App.Views"
        xmlns:vm="clr-namespace:Sleipnir.App.ViewModels"
        mc:Ignorable="d"
        Title="Sleipnir" Height="900" Width="1400"
        Icon="/Resources/sleipnir.ico"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:StringToVisibilityInverseConverter x:Key="StringToVisibilityInverseConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        <local:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
        <local:MultiplierConverter x:Key="MultiplierConverter"/>

        <DataTemplate x:Key="IssueCardTemplate">
            <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12" Background="#1C1F30" Padding="15">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding DataContext.OpenIssueDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <Grid>
                    <!-- Standard Issue Layout -->
                    <StackPanel x:Name="StandardLayout">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="ðŸ“‹" Foreground="#4D7CFF" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <Border BorderBrush="#4D7CFF" BorderThickness="1" CornerRadius="2" Padding="4,1">
                                        <TextBlock Text="ISSUE" Foreground="#4D7CFF" FontSize="10" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                
                                <TextBlock Text="{Binding TypeTag}" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding PriorityTag}" FontSize="11" Foreground="#8B949E" FontWeight="SemiBold" Margin="0,0,0,15"/>

                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                         Background="Transparent" BorderThickness="0" Foreground="White" 
                                         FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Padding="0"
                                         TextWrapping="Wrap" AcceptsReturn="False">
                                    <TextBox.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick" 
                                                      Command="{Binding DataContext.OpenIssueDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                      CommandParameter="{Binding}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="ðŸ‘¤" Foreground="#8B949E" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding ResponsibleUsers}" FontSize="11" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}created {0:dd.MM.yyyy}'}" 
                                           FontSize="9" Foreground="#8B949E" Opacity="0.6"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <Grid Margin="0,0,0,10" HorizontalAlignment="Right">
                                      <ToggleButton x:Name="PlanToggle" Style="{StaticResource SidebarToggleButton}" Padding="0" Height="Auto"
                                                    Command="{Binding DataContext.SetPlannedIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}">
                                          <Border Background="#3D7C4DFF" Padding="6,3" CornerRadius="4">
                                              <TextBlock Text="PLAN" FontSize="10" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                                          </Border>
                                      </ToggleButton>
                                      <Popup IsOpen="{Binding IsChecked, ElementName=PlanToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=PlanToggle}" AllowsTransparency="True">
                                          <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="250" MaxHeight="300" Margin="0,5,0,0">
                                              <ScrollViewer Margin="5">
                                                  <ItemsControl ItemsSource="{Binding DataContext.Sprints, RelativeSource={RelativeSource AncestorType=Window}}">
                                                      <ItemsControl.ItemTemplate>
                                                          <DataTemplate>
                                                              <Button Command="{Binding DataContext.AssignToSprintCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                      CommandParameter="{Binding}" Click="SprintSelected_Click"
                                                                      Style="{StaticResource SidebarButton}" HorizontalContentAlignment="Left" Padding="10,8" Margin="0,0,0,2">
                                                                   <StackPanel>
                                                                       <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                                                       <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="10" Opacity="0.6"/>
                                                                   </StackPanel>
                                                              </Button>
                                                          </DataTemplate>
                                                      </ItemsControl.ItemTemplate>
                                                  </ItemsControl>
                                              </ScrollViewer>
                                          </Border>
                                      </Popup>
                                </Grid>
                                
                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding IssueNumber}" Foreground="#8B949E" FontSize="10" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding ParentStoryNumber}" Foreground="#FF5252" FontSize="10" FontWeight="Bold" Margin="0,0,0,2"
                                               Visibility="{Binding ParentStoryNumber, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding ParentIdeaNumber}" Foreground="#FFD740" FontSize="10" FontWeight="Bold" Margin="0,0,0,2"
                                               Visibility="{Binding ParentIdeaNumber, Converter={StaticResource NullToVisibilityConverter}}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding AgeString}" FontSize="10" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0" Opacity="0.8"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Pipeline Story Layout -->
                    <StackPanel x:Name="PipelineStoryLayout" Visibility="Collapsed">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ“˜" Foreground="#FF5252" FontSize="14" Margin="0,0,5,0"/>
                                <Border BorderBrush="#FF5252" BorderThickness="1" CornerRadius="2" Padding="4,1">
                                    <TextBlock Text="STORY" Foreground="#FF5252" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock Text="{Binding StoryNumber}" Foreground="#8B949E" FontSize="10" HorizontalAlignment="Right" Opacity="0.8"/>
                                <Button Command="{Binding DataContext.JumpToIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding ParentIssueId}"
                                        Style="{StaticResource SidebarButton}" Padding="0" Margin="0,2,0,0"
                                        Visibility="{Binding ParentFriendlyId, Converter={StaticResource NullToVisibilityConverter}}">
                                    <TextBlock Text="{Binding ParentIdeaNumber}" Foreground="#FFD740" FontSize="9" FontWeight="Bold"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" Foreground="White" 
                                 FontSize="16" FontWeight="Bold" Margin="0,15,0,10" Padding="0" TextWrapping="Wrap" AcceptsReturn="False"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding IssueCount}" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="12"/>
                            <TextBlock Text=" linked issues" Foreground="#8B949E" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                        <Button Command="{Binding DataContext.AddChildIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}" Style="{StaticResource SidebarButton}" HorizontalAlignment="Left" Padding="0" Margin="0,5,0,10">
                            <TextBlock Text="+ Issue" FontSize="11" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                        </Button>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}created {0:dd.MM.yyyy}'}" FontSize="9" Foreground="#8B949E" VerticalAlignment="Bottom" Opacity="0.6"/>
                            <TextBlock Text="{Binding AgeString}" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.6"/>
                        </Grid>
                    </StackPanel>

                    <!-- Idea Hub Layout -->
                    <StackPanel x:Name="IdeaHubLayout" Visibility="Collapsed">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <TextBlock Text="ðŸ’¡" Foreground="#FFD740" FontSize="14" Margin="0,0,5,0"/>
                                <Border BorderBrush="#FFD740" BorderThickness="1" CornerRadius="2" Padding="4,1">
                                    <TextBlock Text="IDEA" Foreground="#FFD740" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding IdeaNumber}" Foreground="#8B949E" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Top" Opacity="0.8"/>
                        </Grid>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Background="Transparent" BorderThickness="0" Foreground="White" 
                                 FontSize="16" FontWeight="Bold" Margin="0,15,0,10" Padding="0" TextWrapping="Wrap" AcceptsReturn="False"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding StoryCount}" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="12"/>
                            <TextBlock Text=" linked stories" Foreground="#8B949E" FontSize="12" Margin="5,0,0,0"/>
                        </StackPanel>
                        <Button Command="{Binding DataContext.AddStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}" Style="{StaticResource SidebarButton}" HorizontalAlignment="Left" Padding="0" Margin="0,5,0,10">
                            <TextBlock Text="+ Story" FontSize="11" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                        </Button>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}created {0:dd.MM.yyyy}'}" FontSize="9" Foreground="#8B949E" VerticalAlignment="Bottom" Opacity="0.6"/>
                            <TextBlock Text="{Binding AgeString}" FontSize="9" Foreground="#8B949E" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.6"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Type}" Value="Idea"/>
                        <Condition Binding="{Binding Category}" Value="Hub"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="StandardLayout" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="IdeaHubLayout" Property="Visibility" Value="Visible"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Type}" Value="Story"/>
                        <Condition Binding="{Binding Category}" Value="Pipeline"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="StandardLayout" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="PipelineStoryLayout" Property="Visibility" Value="Visible"/>
                </MultiDataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="InnerContentGrid" Grid.RowSpan="2">
            <Grid.Effect>
                <BlurEffect Radius="{Binding IsProjectSelectorVisible, Converter={StaticResource BooleanToDoubleConverter}, ConverterParameter=15}"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="#141724" Height="32" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                    <Image Source="/Resources/sleipnir_logo.png" Height="20" Width="20" Margin="0,0,8,0"/>
                    <TextBlock Text="Sleipnir | Advanced Issue Tracking" VerticalAlignment="Center" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="â€”" Style="{StaticResource WindowControlButton}" Click="Minimize_Click"/>
                    <Button Content="â–¢" Style="{StaticResource WindowControlButton}" Click="Maximize_Click"/>
                    <Button Content="âœ•" Style="{StaticResource WindowCloseButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#141724" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <Image Source="/Resources/sleipnir_logo.png" Height="40" Width="40" Margin="0,0,10,0"/>
                        <TextBlock Text="Sleipnir" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Project Switcher Card -->
                    <Button Grid.Row="1" Command="{Binding ToggleProjectSelectorCommand}" Style="{StaticResource SidebarButton}" Height="60" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="35" Height="35" CornerRadius="8" Margin="0,0,12,0" ClipToBounds="True">
                                <Grid>
                                    <!-- Placeholder Background -->
                                    <Border Background="{StaticResource AccentBrush}" 
                                            Visibility="{Binding SelectedProject.LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    
                                    <TextBlock Text="P" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"
                                               Visibility="{Binding SelectedProject.LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    
                                    <Image Source="{Binding SelectedProject.LogoUrl}" Stretch="UniformToFill"
                                           Visibility="{Binding SelectedProject.LogoUrl, Converter={StaticResource NullToVisibilityConverter}}">
                                    </Image>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedProject.Name, FallbackValue='Select Project'}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Switch Workspace" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="â–¼" FontSize="10" VerticalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                        </Grid>
                    </Button>

                    <!-- Main Navigation Scroll Area -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="PLANNING" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="5,0,0,10" Opacity="0.6"/>
                            
                            <Button Style="{StaticResource SidebarButton}" Padding="8,10" 
                                    Click="AllIssues_Click" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‹" Margin="0,0,12,0" FontSize="16"/>
                                    <TextBlock Text="Unplanned Issues" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="SPRINTS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextMutedBrush}" Margin="5,0,0,10" Opacity="0.6"/>
                            
                            <ListBox ItemsSource="{Binding Sprints}" 
                                    SelectedItem="{Binding SelectedSprint}"
                                    Background="Transparent" BorderThickness="0" Margin="0,0,0,20">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5,2" Opacity="{Binding IsCurrent, Converter={StaticResource BooleanToOpacityConverter}, FallbackValue=1}">
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM}'}" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                                <TextBlock Text=" - " FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM}'}" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                                                <Border Margin="10,0,0,0" Background="#3300C853" CornerRadius="4" Visibility="{Binding IsCurrent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="ACTIVE" FontSize="8" Padding="3,1" Foreground="#00C853" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Command="{Binding OpenSprintModalCommand}" Style="{StaticResource SidebarButton}" Margin="0,5,0,0" Padding="8,5">
                                 <TextBlock Text="+ Add Sprint" FontSize="11"/>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Bottom Actions (Archive) -->
                    <StackPanel Grid.Row="3" Margin="0,20,0,0">
                        <Button Command="{Binding ToggleArchiveCommand}" Style="{StaticResource SidebarButton}" Padding="8,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" Margin="0,0,10,0"/>
                                <TextBlock Text="Sprint Archive" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- Archive Section -->
                        <ListBox ItemsSource="{Binding ArchivedSprints}" 
                                 SelectedItem="{Binding SelectedSprint}"
                                 Background="Transparent" BorderThickness="0"
                                 Visibility="{Binding IsArchiveVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="15,2" Opacity="0.6">
                                        <TextBlock Text="{Binding Name}" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat='{}Ended {0:dd.MM.yyyy}'}" FontSize="9" Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedProject.Name, FallbackValue='Select Project'}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextMutedBrush}"/>
                            <Button Command="{Binding EditProjectModalCommand}" Style="{StaticResource WindowControlButton}" Width="20" Height="20" Margin="5,0,0,0" Padding="0">
                                <TextBlock Text="âœŽ" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                            <TextBlock Text=" â€¢ " FontSize="12" Foreground="{StaticResource BorderBrush}" Margin="5,0"/>
                            <TextBlock Text="{Binding SelectedProject.Description, FallbackValue='...'}" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="{Binding CurrentViewTitle}" FontSize="32" FontWeight="Bold" Foreground="White"/>
                            <Button Command="{Binding EditSprintModalCommand}" Style="{StaticResource WindowControlButton}" Width="25" Height="25" Margin="10,5,0,0" Padding="0"
                                    Visibility="{Binding SelectedSprint, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="âœŽ" FontSize="14" Foreground="{StaticResource TextMutedBrush}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                         <Button Command="{Binding CompleteSprintCommand}" Style="{StaticResource AccentButton}" Margin="0,0,15,0"
                                Visibility="{Binding CanCompleteSelectedSprint, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Complete Sprint âˆš" Foreground="White" FontWeight="Bold"/>
                        </Button>

                        <Border CornerRadius="20" Background="#2A2F45" Padding="15,8" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="S" Margin="0,0,10,0"/>
                                <TextBlock Text="Search items..." Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Border>


                    </StackPanel>
                </Grid>

                <TabControl Grid.Row="1" Margin="0,0,0,20" 
                            SelectedValue="{Binding SelectedCategory, Mode=TwoWay}"
                            SelectedValuePath="Tag">
                    <TabItem Tag="Backlog">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="B "/>
                                <TextBlock Text="Backlog"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Tag="Pipeline" Visibility="{Binding SelectedSprint, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="P "/>
                                <TextBlock Text="Pipeline"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Tag="Hub" Visibility="{Binding SelectedSprint, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="H "/>
                                <TextBlock Text="Hub"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                </TabControl>

                <Grid Grid.Row="2">
                    <!-- Planning View (Single Column / WrapPanel) - Shown for Unplanned or non-backlog tabs -->
                    <Grid Visibility="{Binding IsBoardViewVisible, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20">
                            <Button Command="{Binding CreateIssueCommand}" CommandParameter="Open" 
                                    Style="{StaticResource AccentButton}" HorizontalAlignment="Left" 
                                    Padding="15,8" Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+ " FontWeight="Bold"/>
                                    <TextBlock FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Create New Issue"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedCategory}" Value="Hub">
                                                        <Setter Property="Text" Value="Create New Idea"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedCategory}" Value="Pipeline">
                                                        <Setter Property="Text" Value="Create New Story"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedCategory}" Value="Backlog">
                                                        <Setter Property="Text" Value="Create New Issue"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding ToggleHubArchiveCommand}" Style="{StaticResource SidebarButton}" 
                                    Padding="12,8"
                                    Visibility="{Binding SelectedCategory, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Hub}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“ " FontSize="12" Opacity="0.7"/>
                                    <TextBlock Text="Show Hub Archive" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShowHubArchive}" Value="True">
                                                        <Setter Property="Text" Value="Hide Hub Archive"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                             <ItemsControl ItemsSource="{Binding AllCategoryItems}" ItemTemplate="{StaticResource IssueCardTemplate}" Margin="0,10,0,0">
                                 <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" 
                                                   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.SelectedCategory, RelativeSource={RelativeSource AncestorType=Window}}" Value="Backlog">
                                                <Setter Property="Width" Value="350"/>
                                                <Setter Property="Margin" Value="5"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DataContext.SelectedCategory, RelativeSource={RelativeSource AncestorType=Window}}" Value="Hub">
                                                <Setter Property="Width" Value="350"/>
                                                <Setter Property="Margin" Value="5"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DataContext.SelectedCategory, RelativeSource={RelativeSource AncestorType=Window}}" Value="Pipeline">
                                                <Setter Property="Width" Value="350"/>
                                                <Setter Property="Margin" Value="5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                             </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <!-- Board View (4 Columns) - Only shown for Sprint > Backlog -->
                    <Grid Visibility="{Binding IsBoardViewVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="0,0,15,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel>
                                        <Border Height="3" Background="{StaticResource OpenStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                        <TextBlock Text="OPEN" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource OpenStatusBrush}"/>
                                    </StackPanel>
                                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                            Command="{Binding CreateIssueCommand}" CommandParameter="Open" WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                    </Button>
                                </Grid>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding OpenItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="15,0,15,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel>
                                        <Border Height="3" Background="{StaticResource InProgressStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                        <TextBlock Text="IN PROGRESS" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource InProgressStatusBrush}"/>
                                    </StackPanel>
                                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                            Command="{Binding CreateIssueCommand}" CommandParameter="In Progress" WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                    </Button>
                                </Grid>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding InProgressItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="15,0,15,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel>
                                        <Border Height="3" Background="{StaticResource TestingStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                        <TextBlock Text="IN TESTING" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource TestingStatusBrush}"/>
                                    </StackPanel>
                                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                            Command="{Binding CreateIssueCommand}" CommandParameter="In Testing" WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                    </Button>
                                </Grid>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding TestingItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <Border Grid.Column="3" Padding="15,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="0,0,0,20">
                                    <StackPanel>
                                        <Border Height="3" Background="{StaticResource FinishedStatusBrush}" CornerRadius="1.5" Margin="0,0,0,10" Width="40" HorizontalAlignment="Left"/>
                                        <TextBlock Text="FINISHED" Style="{StaticResource CategoryHeader}" Foreground="{StaticResource FinishedStatusBrush}"/>
                                    </StackPanel>
                                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SidebarButton}"
                                            Command="{Binding CreateIssueCommand}" CommandParameter="Finished" WindowChrome.IsHitTestVisibleInChrome="True">
                                        <TextBlock Text="+" Foreground="{StaticResource TextMutedBrush}"/>
                                    </Button>
                                </Grid>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding FinishedItems}" ItemTemplate="{StaticResource IssueCardTemplate}"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

        <!-- Project Modal Overlay -->
        <Border Grid.RowSpan="2" Background="#CC000000" Visibility="{Binding IsProjectModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="4000">
            <Border Background="#1A1D2E" CornerRadius="15" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    Width="500" Height="580" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding ProjectModalTitle}" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Project Name" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewProjectName, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" Margin="0,0,0,20"/>

                        <TextBlock Text="Description" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewProjectDescription, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" Margin="0,0,0,20" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>

                        <TextBlock Text="Logo URL / Path" Foreground="{StaticResource TextMutedBrush}" Margin="0,15,0,8"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding NewProjectLogoUrl, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White"/>
                            <Button Grid.Column="1" Command="{Binding BrowseLogoCommand}" Style="{StaticResource SidebarButton}" Content="ðŸ“" Width="40" Height="40" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Margin="5,0,0,0" ToolTip="Browse..."/>
                            <Button Grid.Column="2" Command="{Binding ClearLogoCommand}" Style="{StaticResource SidebarButton}" Content="âœ•" Width="40" Height="40" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" Margin="5,0,0,0" ToolTip="Clear Logo"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Command="{Binding CancelProjectModalCommand}" Style="{StaticResource SidebarButton}" Content="Cancel" Margin="0,0,10,0"/>
                        <Button Command="{Binding SaveProjectCommand}" Style="{StaticResource AccentButton}" Content="Save Project"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Sprint Planning Modal Overlay -->
        <Border Grid.RowSpan="2" Background="#CC000000" Visibility="{Binding IsSprintModalVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="3500">
            <Border Background="#1A1D2E" CornerRadius="15" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                    Width="500" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Margin="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding SprintModalTitle}" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Sprint Name" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewSprintName, UpdateSourceTrigger=PropertyChanged}" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="From" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding NewSprintStartDate, Mode=TwoWay}" Language="en-GB"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="â†’" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="{StaticResource TextMutedBrush}"/>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="To" Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                                <DatePicker SelectedDate="{Binding NewSprintEndDate, Mode=TwoWay}" Language="en-GB"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Button Command="{Binding DeleteSprintCommand}" Style="{StaticResource DangerButton}" Content="Delete Sprint" HorizontalAlignment="Left"
                                Visibility="{Binding IsEditingSprint, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding CancelSprintModalCommand}" Style="{StaticResource SidebarButton}" Content="Cancel" Margin="0,0,10,0"/>
                            <Button Command="{Binding SaveSprintCommand}" Style="{StaticResource AccentButton}" Content="{Binding SprintModalTitle}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Border>
        
        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#CC000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="1000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Syncing..." Margin="0,10,0,0" FontWeight="Medium"/>
            </StackPanel>
        </Border>
        <!-- Project Hub Wheel (Hidden Overlay) -->
        <Border Grid.RowSpan="2" Background="#DD0F111A" Panel.ZIndex="3000"
                Visibility="{Binding IsProjectSelectorVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Command="{Binding ToggleProjectSelectorCommand}" Style="{StaticResource WindowControlButton}" 
                        HorizontalAlignment="Right" Margin="30" Width="40" Height="40">
                    <TextBlock Text="âœ•" FontSize="20"/>
                </Button>

                <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Central Orb (Add Project Button) -->
                    <Button Command="{Binding CreateProjectCommand}" Style="{StaticResource SidebarButton}" 
                            Width="200" Height="200" Panel.ZIndex="10" Padding="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#1A1D2E" CornerRadius="100" BorderBrush="{StaticResource AccentBrush}" BorderThickness="2">
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Grid>
                                                <Image Source="/Resources/sleipnir_logo.png" Height="80" Width="80" Margin="0,0,0,5"/>
                                                <TextBlock Text="+" FontSize="30" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" 
                                                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-10,-10,0"/>
                                            </Grid>
                                            <TextBlock Text="ADD NEW" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                                            <TextBlock Text="PROJECT" FontSize="10" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{StaticResource TextMutedBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Projects Wheel (ItemsControl) -->
                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" Rows="2" Width="600" Height="600"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.SelectProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource SidebarButton}" Height="160" Width="160">
                                    <Border Background="#2A2F45" CornerRadius="20" Padding="15">
                                        <StackPanel VerticalAlignment="Center">
                                            <Border Width="50" Height="50" CornerRadius="12" Margin="0,0,0,12" HorizontalAlignment="Center" ClipToBounds="True">
                                                <Grid>
                                                    <Border Background="{StaticResource AccentBrush}" 
                                                            Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                    
                                                    <TextBlock Text="P" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="center" VerticalAlignment="Center"
                                                               Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                                    
                                                    <Image Source="{Binding LogoUrl}" Stretch="UniformToFill"
                                                           Visibility="{Binding LogoUrl, Converter={StaticResource NullToVisibilityConverter}}">
                                                    </Image>
                                                </Grid>
                                            </Border>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="15" 
                                                       TextAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" 
                                                       MaxHeight="45"/>
                                        </StackPanel>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
