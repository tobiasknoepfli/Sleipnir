                                        </Button.Style>
                                        <StackPanel VerticalAlignment="Center">
                                            <Border Width="100" Height="100" CornerRadius="25" Margin="0,0,0,30" HorizontalAlignment="Center" ClipToBounds="True" Background="#2A2F45">
                                                <Grid>
                                                    <Border Background="{StaticResource AccentBrush}">
                                                        <Border.Visibility>
                                                            <MultiBinding Converter="{StaticResource ProjectLogoVisibilityConverter}" ConverterParameter="Inverse">
                                                                <Binding Path="LogoUrl"/>
                                                                <Binding Path="LogoData"/>
                                                            </MultiBinding>
                                                        </Border.Visibility>
                                                        <TextBlock Text="P" FontSize="40" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Image Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Image.Visibility>
                                                            <MultiBinding Converter="{StaticResource ProjectLogoVisibilityConverter}">
                                                                <Binding Path="LogoUrl"/>
                                                                <Binding Path="LogoData"/>
                                                            </MultiBinding>
                                                        </Image.Visibility>
                                                        <Image.Source>
                                                            <MultiBinding Converter="{StaticResource ProjectLogoConverter}">
                                                                <Binding Path="LogoUrl"/>
                                                                <Binding Path="LogoData"/>
                                                            </MultiBinding>
                                                        </Image.Source>
                                                    </Image>
                                                </Grid>
                                            </Border>
                                            
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="22" 
                                                       TextAlignment="Center" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" 
                                                       MaxHeight="65" Margin="0,0,0,12" Foreground="White"/>
                                            
                                            <TextBlock Text="{Binding Description}" FontSize="13" Foreground="{StaticResource TextMutedBrush}" 
                                                       TextAlignment="Center" TextWrapping="Wrap" MaxHeight="55" TextTrimming="CharacterEllipsis" Margin="0,0,0,25"/>
                                            
                                            <Button Command="{Binding DataContext.CopyProjectIdCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#2A2F45" BorderThickness="0" HorizontalAlignment="Center" Padding="15,8">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ”—" Margin="0,0,8,0" FontSize="12" Opacity="0.7"/>
                                                    <TextBlock Text="COPY PROJECT ID" FontSize="10" FontWeight="Bold"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Create New Project Card (Added to the flow) -->
                        <Button Command="{Binding CreateProjectCommand}" 
                                Margin="20" Width="280" Height="380">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Rectangle x:Name="Bd" Stroke="{StaticResource AccentBrush}" StrokeThickness="2" StrokeDashArray="3 3" RadiusX="24" RadiusY="24" Fill="Transparent"/>
                                                    <Border Padding="35">
                                                        <ContentPresenter/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="Fill" Value="#1A7C4DFF"/>
                                                        <Setter TargetName="Bd" Property="StrokeDashArray" Value="1 0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                             <StackPanel VerticalAlignment="Center">
                                 <Border Width="70" Height="70" CornerRadius="35" Background="{StaticResource AccentBrush}" Margin="0,0,0,25" HorizontalAlignment="Center">
                                     <TextBlock Text="+" FontSize="40" FontWeight="Light" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-3,0,0"/>
                                 </Border>
                                 <TextBlock Text="NEW PROJECT" FontWeight="Bold" FontSize="16" Foreground="{StaticResource AccentBrush}" TextAlignment="Center"/>
                                 <TextBlock Text="Create a custom workspace" FontSize="12" Foreground="{StaticResource TextMutedBrush}" TextAlignment="Center" Margin="0,10,0,0" Opacity="0.7"/>
                             </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
