<Window x:Class="Sleipnir.App.Views.IssueDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sleipnir.App.Views"
        xmlns:utils="clr-namespace:Sleipnir.App.Utils"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Sleipnir | Issue Details" Height="650" Width="900"
        Icon="/Resources/sleipnir.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Background" Value="#0F111A"/>
        </Style>
    </Window.Style>
    <Window.Resources>
        <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <utils:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <utils:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
        <utils:StringContainsMultiConverter x:Key="StringContainsMultiConverter"/>

        <!-- ComboBox Style for Dark Theme -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2A2F45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Padding="{TemplateBinding Padding}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          HorizontalContentAlignment="Left">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                 <ContentPresenter Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  ContentTemplateSelector="{Binding SelectionBoxItemTemplateSelector, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  Margin="{TemplateBinding Padding}" 
                                                                  VerticalAlignment="Center"
                                                                  IsHitTestVisible="False"/>
                                                 <TextBlock Grid.Column="1" Text="â–¼" Opacity="0.6" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Name="DropDownBorder" Background="#2A2F45" BorderBrush="#30363D" BorderThickness="1" CornerRadius="4" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="300" Margin="0,2,0,0">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3D4460"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#7C4DFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Height="32" BorderBrush="#30363D" BorderThickness="0,0,0,1">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#000129"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Epic">
                            <Setter Property="Background" Value="#2b2402"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="Story">
                            <Setter Property="Background" Value="#250100"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <Image Source="/Resources/sleipnir_logo.png" Height="16" Width="16" Margin="0,0,8,0"/>
                    <TextBlock VerticalAlignment="Center" Foreground="#8B949E" FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Sleipnir | Issue Details"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Epic"><Setter Property="Text" Value="Sleipnir | Epic Details"/></DataTrigger>
                                    <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Text" Value="Sleipnir | Story Details"/></DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="âœ•" Style="{StaticResource WindowCloseButton}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="30" VerticalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <StackPanel>
                <!-- Title Row -->
                <TextBlock Text="TITLE" FontSize="11" FontWeight="Bold" Foreground="#7C4DFF" Margin="0,0,0,8"/>
                <TextBox x:Name="TitleTextBox" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                          FontSize="20" FontWeight="Bold" Background="#2A2F45" BorderThickness="0" Padding="12" Foreground="White" Margin="0,0,0,25"/>

                <!-- Description Row -->
                <TextBlock Text="DESCRIPTION" FontSize="11" FontWeight="Bold" Foreground="#7C4DFF" Margin="0,0,0,8"/>
                <TextBox Text="{Binding LongDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#2A2F45" BorderThickness="0" Padding="15" Foreground="White" 
                         MinHeight="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,25" FontSize="14">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Story">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Story Components -->
                <StackPanel Margin="0,0,0,25">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Story">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="AS A..." FontSize="11" FontWeight="Bold" Foreground="#FF5252" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="2" Text="{Binding Persona, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" FontSize="14"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="I WANT TO..." FontSize="11" FontWeight="Bold" Foreground="#FF5252" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="2" Text="{Binding Purpose, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" FontSize="14"/>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="SO THAT..." FontSize="11" FontWeight="Bold" Foreground="#FF5252" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="2" Text="{Binding Goal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" FontSize="14"/>
                    </Grid>

                    <TextBlock Text="DEFINITION OF DONE (STORY IS DONE WHEN...)" FontSize="11" FontWeight="Bold" Foreground="#FF5252" Margin="0,10,0,8"/>
                    <TextBox Text="{Binding DefinitionOfDone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#2A2F45" BorderThickness="0" Padding="15" Foreground="White" 
                             MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontSize="14"/>
                </StackPanel>


                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Epic"><Setter Property="Visibility" Value="Collapsed"/></DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Visibility" Value="Collapsed"/></DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
 
                        <!-- Kind Dropdown -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="KIND" FontSize="11" FontWeight="Bold" Foreground="#FFD740" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ViewModel.Kinds, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding Type}"
                                      Background="#2A2F45" BorderThickness="0" Padding="12" Foreground="White">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="25" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding}" Value="Bug"><Setter Property="Text" Value="ðŸž"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Feature"><Setter Property="Text" Value="âœ¨"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Patch"><Setter Property="Text" Value="ðŸ› ï¸"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Overhaul"><Setter Property="Text" Value="ðŸ—ï¸"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Alteration"><Setter Property="Text" Value="âš™ï¸"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Story"><Setter Property="Text" Value="ðŸ“˜"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Epic"><Setter Property="Text" Value="ðŸ’¡"/></DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding}" Foreground="#FFD740" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
 
                        <!-- Priority Options -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="PRIORITY" FontSize="11" FontWeight="Bold" Foreground="#7C4DFF" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ViewModel.Priorities, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding Priority}"
                                      Background="#2A2F45" BorderThickness="0" Padding="12" Foreground="White">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="25" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding}" Value="Critical"><Setter Property="Text" Value="â€¼"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Very High"><Setter Property="Text" Value="â—"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="High"><Setter Property="Text" Value="â†‘"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Neutral"><Setter Property="Text" Value="â†’"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Low"><Setter Property="Text" Value="â†“"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Very Low"><Setter Property="Text" Value="-"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Nice to Have"><Setter Property="Text" Value="--"/></DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding}" FontWeight="SemiBold" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding}" Value="Critical"><Setter Property="Foreground" Value="#FF4444"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Very High"><Setter Property="Foreground" Value="#FF8800"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="High"><Setter Property="Foreground" Value="#FFEE00"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Neutral"><Setter Property="Foreground" Value="#FFFFFF"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Low"><Setter Property="Foreground" Value="#88CCFF"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Very Low"><Setter Property="Foreground" Value="#4488FF"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding}" Value="Nice to Have"><Setter Property="Foreground" Value="#00CED1"/></DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
 
                    <!-- Assignees -->
                    <TextBlock Text="ASSIGNEES" FontSize="11" FontWeight="Bold" Foreground="#7C4DFF" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,25">
                        <ToggleButton x:Name="AssigneesToggle" Style="{StaticResource SidebarToggleButton}" Padding="15,10" HorizontalAlignment="Left">
                            <StackPanel x:Name="AssigneeIconsPanel" Orientation="Horizontal"/>
                        </ToggleButton>
                        <Popup IsOpen="{Binding IsChecked, ElementName=AssigneesToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=AssigneesToggle}" AllowsTransparency="True">
                             <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="250" MaxHeight="300" Margin="0,5,0,0">
                                 <ScrollViewer Margin="10">
                                     <ItemsControl ItemsSource="{Binding ViewModel.Collaborators, RelativeSource={RelativeSource AncestorType=Window}}">
                                         <ItemsControl.ItemTemplate>
                                             <DataTemplate>
                                                 <CheckBox Foreground="White" Margin="0,5"
                                                           Click="CheckBox_Click">
                                                     <CheckBox.IsChecked>
                                                        <MultiBinding Converter="{StaticResource StringContainsMultiConverter}" Mode="OneWay">
                                                            <Binding Path="DataContext.ResponsibleUsers" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                            <Binding Path="Name"/>
                                                        </MultiBinding>
                                                    </CheckBox.IsChecked>
                                                    <StackPanel Orientation="Horizontal">
                                                        <iconPacks:PackIconMaterial Kind="{Binding Emoji}" Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Name}" FontSize="12" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                 </CheckBox>
                                             </DataTemplate>
                                         </ItemsControl.ItemTemplate>
                                     </ItemsControl>
                                 </ScrollViewer>
                             </Border>
                        </Popup>
                    </Grid>

                    <!-- Plan Button -->
                    <TextBlock Text="PLANNING" FontSize="11" FontWeight="Bold" Foreground="#7C4DFF" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,30">
                        <ToggleButton x:Name="DetailPlanToggle" 
                                      Command="{Binding ViewModel.SetPlannedIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                      CommandParameter="{Binding}"
                                      Style="{StaticResource SidebarToggleButton}" HorizontalAlignment="Left" Padding="20,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“… "/>
                                <TextBlock Text="{Binding SprintTag}" FontWeight="Bold"/>
                                <TextBlock Text=" (Change)" Foreground="#8B949E" FontSize="10" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ToggleButton>
                        <Popup IsOpen="{Binding IsChecked, ElementName=DetailPlanToggle}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=DetailPlanToggle}" AllowsTransparency="True">
                            <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="300" MaxHeight="350" Margin="0,5,0,0">
                                <Grid>
                                     <Grid.RowDefinitions>
                                         <RowDefinition Height="Auto"/>
                                         <RowDefinition Height="*"/>
                                     </Grid.RowDefinitions>
                                     <TextBlock Text="Select Target Sprint" FontSize="10" Foreground="#8B949E" Margin="12,12,12,8" FontWeight="Bold"/>
                                     <ScrollViewer Grid.Row="1" Margin="5">
                                         <ItemsControl ItemsSource="{Binding ViewModel.Sprints, RelativeSource={RelativeSource AncestorType=Window}}">
                                             <ItemsControl.ItemTemplate>
                                                 <DataTemplate>
                                                     <Button Click="SprintSelected_Click" 
                                                             Command="{Binding ViewModel.AssignToSprintCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                             CommandParameter="{Binding}"
                                                             Style="{StaticResource SidebarButton}" HorizontalContentAlignment="Left" Padding="10,8" Margin="0,0,0,2">
                                                          <StackPanel>
                                                              <TextBlock Text="{Binding Name}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                                              <StackPanel Orientation="Horizontal" Opacity="0.6">
                                                                  <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="10"/>
                                                                  <TextBlock Text=" - " FontSize="10"/>
                                                                  <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="10"/>
                                                              </StackPanel>
                                                          </StackPanel>
                                                     </Button>
                                                 </DataTemplate>
                                             </ItemsControl.ItemTemplate>
                                         </ItemsControl>
                                     </ScrollViewer>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </StackPanel>

                <!-- Linked Items (For Epics and Stories) -->
                <StackPanel Margin="0,0,0,30">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Epic"><Setter Property="Visibility" Value="Visible"/></DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Visibility" Value="Visible"/></DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Grid Margin="0,0,0,8">
                        <TextBlock FontSize="11" FontWeight="Bold" Foreground="#7C4DFF">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="LINKED ITEMS"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="Epic"><Setter Property="Text" Value="LINKED STORIES"/></DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Text" Value="LINKED ISSUES"/></DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button HorizontalAlignment="Right" Style="{StaticResource SidebarButton}" Padding="10,2"
                                Command="{Binding ViewModel.AddStoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Epic}">
                            <TextBlock Text="+ Story" FontSize="10" FontWeight="Bold"/>
                        </Button>
                        <Button HorizontalAlignment="Right" Style="{StaticResource SidebarButton}" Padding="10,2"
                                Command="{Binding ViewModel.AddChildIssueCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Visibility="{Binding Type, Converter={StaticResource EqualityToVisibilityConverter}, ConverterParameter=Story}">
                            <TextBlock Text="+ Issue" FontSize="10" FontWeight="Bold"/>
                        </Button>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding Children}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1C1F30" Margin="0,0,0,8" Padding="12,8" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="ðŸ“‹"/>
                                                        <Setter Property="Foreground" Value="#4D7CFF"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Type}" Value="Bug"><Setter Property="Text" Value="ðŸž"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="Feature"><Setter Property="Text" Value="âœ¨"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Text" Value="ðŸ“˜"/><Setter Property="Foreground" Value="#FF5252"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Type}" Value="Epic"><Setter Property="Text" Value="ðŸ’¡"/><Setter Property="Foreground" Value="#FFD740"/></DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock FontSize="10" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Critical"><Setter Property="Text" Value="â€¼"/><Setter Property="Foreground" Value="#FF4444"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Very High"><Setter Property="Text" Value="â—"/><Setter Property="Foreground" Value="#FF8800"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="High"><Setter Property="Text" Value="â†‘"/><Setter Property="Foreground" Value="#FFEE00"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Neutral"><Setter Property="Text" Value="â†’"/><Setter Property="Foreground" Value="White"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Low"><Setter Property="Text" Value="â†“"/><Setter Property="Foreground" Value="#88CCFF"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Very Low"><Setter Property="Text" Value="-"/><Setter Property="Foreground" Value="#4488FF"/></DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Nice to Have"><Setter Property="Text" Value="--"/><Setter Property="Foreground" Value="#00CED1"/></DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding Description}" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Border Background="#2A2F45" Padding="6,2" CornerRadius="3" Margin="0,0,10,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" FontSize="9" FontWeight="Bold" Foreground="#8B949E"/>
                                            </Border>
                                            
                                            <Button Style="{StaticResource SidebarButton}" Padding="5" Margin="0,0,5,0"
                                                    Click="EditChild_Click">
                                                <TextBlock Text="âœï¸" FontSize="10"/>
                                            </Button>
                                            
                                            <Button Style="{StaticResource SidebarButton}" Padding="5" Margin="0,0,5,0"
                                                    Click="UnlinkChild_Click">
                                                <TextBlock Text="ðŸ”—" FontSize="10" Foreground="#FF5252"/>
                                            </Button>
                                            
                                            <Button Style="{StaticResource SidebarButton}" Padding="5"
                                                    Click="DeleteChild_Click">
                                                <TextBlock Text="âœ•" FontSize="10" Foreground="#FF5252"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#0F111A" Padding="15,10" BorderBrush="#30363D" BorderThickness="0,1,0,0">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Archive -->
                <Button Click="Archive_Click" Style="{StaticResource SidebarButton}" Margin="5,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“ "/>
                        <TextBlock Text="Archive"/>
                    </StackPanel>
                </Button>

                <!-- Delete -->
                <Button Click="Delete_Click" Style="{StaticResource SidebarButton}" Margin="5,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ• " Foreground="#FF5252"/>
                        <TextBlock Text="Delete" Foreground="#FF5252"/>
                    </StackPanel>
                </Button>

                <!-- Copy -->
                <Button Command="{Binding ViewModel.CopyIssueToClipboardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource SidebarButton}" Margin="5,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“‹ " Foreground="#88CCFF"/>
                        <TextBlock Text="Copy" Foreground="#88CCFF"/>
                    </StackPanel>
                </Button>

                <!-- Link/Unlink Action -->
                <Grid Margin="5,5">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Epic"><Setter Property="Visibility" Value="Collapsed"/></DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Button Click="Unlink_Click" Style="{StaticResource SidebarButton}"
                            Visibility="{Binding ParentFriendlyId, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”— " Foreground="#FF5252"/>
                            <TextBlock Foreground="#FF5252">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Unlink Story"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Text" Value="Unlink Epic"/></DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Grid Visibility="{Binding ParentFriendlyId, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <ToggleButton x:Name="FooterLinkToggle" Style="{StaticResource SidebarToggleButton}" Width="Auto">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”— " Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock Foreground="{StaticResource AccentBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Link Story"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Story"><Setter Property="Text" Value="Link Epic"/></DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </ToggleButton>
                        <Popup IsOpen="{Binding IsChecked, ElementName=FooterLinkToggle}" StaysOpen="False" Placement="Top" PlacementTarget="{Binding ElementName=FooterLinkToggle}" AllowsTransparency="True">
                            <Border Background="#1A1D2E" BorderBrush="#30363D" BorderThickness="1" CornerRadius="8" Width="300" MaxHeight="350" Margin="0,0,0,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock FontSize="10" Foreground="#8B949E" Margin="12,12,12,8" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Select Parent Story"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="Story">
                                                        <Setter Property="Text" Value="Select Parent Epic"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ScrollViewer Grid.Row="1" Margin="5">
                                        <ItemsControl ItemsSource="{Binding ViewModel.PotentialParents, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Click="EpicSelected_Click" Style="{StaticResource SidebarButton}" HorizontalContentAlignment="Left" Padding="10,8" Margin="0,0,0,2">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock FontSize="12" Opacity="0.9" Margin="0,0,8,0">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="ðŸ“˜"/>
                                                                        <Setter Property="Foreground" Value="#FF5252"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Type}" Value="Epic">
                                                                                <Setter Property="Text" Value="ðŸ’¡"/>
                                                                                <Setter Property="Foreground" Value="#FFD740"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Type}" Value="Epic">
                                                                                <Setter Property="Foreground" Value="#FFD740"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Type}" Value="Story">
                                                                                <Setter Property="Foreground" Value="#FF5252"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>

                <!-- Activity Log -->
                <Button Content="ðŸ“‹ Activity Log" Style="{StaticResource SidebarButton}" Click="ViewLogs_Click" Margin="5,5"/>

                <!-- Hierarchy -->
                <Button Content="ðŸ“Š Hierarchy" Style="{StaticResource SidebarButton}" 
                        Command="{Binding ViewModel.ShowHierarchyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}" Margin="5,5"/>

                <!-- Close -->
                <Button Content="Close" Style="{StaticResource SidebarButton}" Click="Close_Click" Margin="5,5"/>

                <!-- Save -->
                <Button Content="Save Changes" Style="{StaticResource AccentButton}" Click="Save_Click" Margin="5,5"/>
            </WrapPanel>
        </Border>
    </Grid>
</Window>
