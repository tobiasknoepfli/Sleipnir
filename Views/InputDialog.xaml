<Window x:Class="Sleipnir.App.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sleipnir | Input" Height="180" Width="400"
        Background="#0F111A" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="False" BorderBrush="#30363D" BorderThickness="1">
    <Border Padding="20">
        <StackPanel>
            <TextBlock x:Name="PromptTitle" Text="Enter title" Foreground="#8B949E" Margin="0,0,0,10" FontSize="12" FontWeight="Bold"/>
            <TextBox x:Name="InputText" Background="#2A2F45" BorderThickness="0" Padding="10" Foreground="White" 
                     Margin="0,0,0,20" KeyDown="InputText_KeyDown"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Style="{StaticResource SidebarButton}" Click="Cancel_Click" Margin="0,0,10,0" Width="80"/>
                <Button Content="Confirm" Style="{StaticResource AccentButton}" Click="Confirm_Click" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
