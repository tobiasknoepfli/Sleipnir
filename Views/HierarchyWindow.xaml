<Window x:Class="Sleipnir.App.Views.HierarchyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Issue Hierarchy" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0F111A" Foreground="White">
    <Window.Resources>
        <Style x:Key="NodeStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1D2E"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="200"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Background="#161B22" Padding="20,15" BorderBrush="#30363D" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Sitemap" Width="20" Height="20" Foreground="#7C4DFF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="GRAPHIC HIERARCHY" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="SubtitleText" Text=" - Root View" FontSize="14" Foreground="#8B949E" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset Zoom" Click="ResetZoom_Click" Style="{StaticResource SidebarButton}" Margin="0,0,10,0"/>
                    <Button Content="Close" Click="Close_Click" Style="{StaticResource SidebarButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Graph Area -->
        <ScrollViewer Grid.Row="1" x:Name="GraphScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#0A0C14">
            <Canvas x:Name="GraphCanvas" Width="2000" Height="2000" MouseWheel="GraphCanvas_MouseWheel">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="GraphScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="GraphTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </ScrollViewer>
        
        <!-- Legend -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20" 
                Background="#CC161B22" Padding="15" CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="LEGEND" FontSize="10" FontWeight="Bold" Foreground="#8B949E" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Border Width="12" Height="12" Background="#FFD740" CornerRadius="3" Margin="0,0,8,0"/>
                    <TextBlock Text="Epic" FontSize="11" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Border Width="12" Height="12" Background="#FF5252" CornerRadius="3" Margin="0,0,8,0"/>
                    <TextBlock Text="Story" FontSize="11" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Border Width="12" Height="12" Background="#4D7CFF" CornerRadius="3" Margin="0,0,8,0"/>
                    <TextBlock Text="Issue" FontSize="11" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
