<Window x:Class="Sleipnir.App.Views.ActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sleipnir | Action Required" Height="200" Width="450"
        Background="#0F111A" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="False" BorderBrush="#30363D" BorderThickness="1">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar to remove white top bar effect -->
        <Border Grid.Row="0" Background="#141724" Height="32" BorderBrush="#30363D" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <Image Source="/Resources/sleipnir_logo.png" Height="14" Width="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Sleipnir" VerticalAlignment="Center" Foreground="#8B949E" FontSize="11" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="DialogTitle" Text="Title" Foreground="#7C4DFF" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Grid.Row="1" x:Name="DialogMessage" Text="Message goes here..." Foreground="White" FontSize="13" TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="25,0,25,25">
            <Button x:Name="Btn1" Content="Action 1" Style="{StaticResource SidebarButton}" Click="Btn1_Click" Margin="0,0,10,0" Padding="15,8" Visibility="Collapsed"/>
            <Button x:Name="Btn2" Content="Action 2" Style="{StaticResource SidebarButton}" Click="Btn2_Click" Margin="0,0,10,0" Padding="15,8" Visibility="Collapsed"/>
            <Button x:Name="BtnCancel" Content="Cancel" Style="{StaticResource SidebarButton}" Click="Cancel_Click" Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
